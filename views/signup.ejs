<div class="container">
  <div class="profile">
    <button class="profile__avatar" id="toggleProfile">
     <img src="http://makerfaire.com/wp-content/themes/makerfaire/images/mf-feature-mfba16-200px.png"="Avatar" />
    </button>
    <div class="profile__form">
      <div class="profile__fields">
        <div class="field">
          <input type="text" id="fieldUser" class="input" required pattern=.*\S.* />
          <label for="fieldUser" class="label">Quester Username</label>
        </div>
        <div class="field">
          <input type="text" id="fieldfirstName" class="input" required pattern=.*\S.* />
          <label for="fieldfirstName" class="label">First Name</label>
        </div>
        <div class="field">
          <input type="text" id="fieldlastName" class="input" required pattern=.*\S.* />
          <label for="fieldlastName" class="label">Last Name</label>
        </div>
        <div class="field">
          <input type="password" id="fieldPassword" class="input" required pattern=.*\S.* />
          <label for="fieldPassword" class="label">Password</label>
        </div>
        <div class="profile__footer">
          <button class="btn">Register</button>
        </div>
      </div>
     </div>
  </div>
</div>
