<div class="container">
  <div class="profile">
    <img src="http://makerfaire.com/wp-content/themes/makerfaire/images/mf-feature-mfba16-200px.png"="Avatar" />
      <div class="profile__form">
        <div class="profile__fields">
          <form action="/User/createNew" method="POST">
            <div class="field">
              <input type="text" name="fieldUser" class="input" required pattern=.*\S.* />
              <label for="fieldUser" class="label">Quester Username</label>
            </div>
            <div class="field">
              <input type="text" name="fieldfirstName" class="input" required pattern=.*\S.* />
              <label for="fieldfirstName" class="label">First Name</label>
            </div>
            <div class="field">
              <input type="text" name="fieldlastName" class="input" required pattern=.*\S.* />
              <label for="fieldlastName" class="label">Last Name</label>
            </div>
            <div class="field">
              <input type="password" name="fieldPassword" class="input" required pattern=.*\S.* />
              <label for="fieldPassword" class="label">Password</label>
            </div>
            <div class="profile__footer">
              <button class="btn">Register</button>
            </div>
          </form>
      </div>
     </div>
  </div>
</div>
